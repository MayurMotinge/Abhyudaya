<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitleNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"
                android:text="Recent Notice"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNoticeBoard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/tvTitleNotice"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/cream"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:background="@drawable/hone_card_bg"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/ttNoticeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notice Title"
                        android:textSize="18dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/ttNoticeDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Time"
                        android:textSize="16sp"
                        android:textColor="@color/transp_white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/emptyLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cream"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/cvNoticeBoard"/>

            <TextView
                android:id="@+id/tvTitleEventBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emptyLine"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"
                android:text="Events"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvEventBoard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/tvTitleEventBoard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/cream"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:background="@drawable/hone_card_bg"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/ttEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Title"
                        android:textSize="18dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/ttEventDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Time"
                        android:textSize="16sp"
                        android:textColor="@color/transp_white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>