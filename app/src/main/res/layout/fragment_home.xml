<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    tools:ignore="HardcodedText"
    >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llHomeTop"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMaintenanceCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/black_cream"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="bottom"
                        android:background="@drawable/hone_card_bg"
                        android:backgroundTint="@color/black_tan">

                        <TextView
                            android:id="@+id/tvMaintenanceTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maintenance"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tvMaintenanceAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/tvMaintenanceDueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Date"
                            android:textSize="14sp"
                            android:textColor="@color/transp_white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvFeedbackCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/black_tan"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/hone_card_bg"
                        android:padding="10dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/tvFeedbackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feedback"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvFeedbackFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feedback From"
                            android:textSize="18dp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tvFeedbackType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feedback Type"
                            android:textSize="14sp"
                            android:textColor="@color/transp_white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:id="@+id/emptyLine3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_tan"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/llHomeTop"/>

            <TextView
                android:id="@+id/tvTitleNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Recent Notice"
                android:textColor="@color/white"
                android:layout_below="@id/emptyLine3"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNoticeBoard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/tvTitleNotice"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mid_black_cream"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivNoticeCardImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/app_icon_logo_black_cream"
                        android:scaleType="centerCrop"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/hone_card_bg"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ttNoticeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notice Title"
                            android:textSize="18sp"
                            android:layout_above="@id/ttNoticeDateTime"
                            android:layout_toStartOf="@id/ivOptionsNoticeCard"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/ttNoticeDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Date Time"
                            android:textSize="16sp"
                            android:textColor="@color/transp_white"/>

                        <ImageView
                            android:id="@+id/ivOptionsNoticeCard"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_more_vert"
                            android:padding="3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/emptyLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_tan"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/cvNoticeBoard"/>

            <TextView
                android:id="@+id/tvTitleEventBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emptyLine"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Events"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvEventBoard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/tvTitleEventBoard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mid_black_cream"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivEventCardImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/app_icon_logo_black_cream"
                        android:scaleType="centerCrop"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/hone_card_bg"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ttEventTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Title"
                            android:textSize="18sp"
                            android:layout_above="@id/ttEventDateTime"
                            android:layout_toStartOf="@id/ivOptionsEventCard"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/ttEventDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Date Time"
                            android:textSize="16sp"
                            android:textColor="@color/transp_white"/>

                        <ImageView
                            android:id="@+id/ivOptionsEventCard"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_more_vert"
                            android:padding="3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/emptyLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_tan"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/cvEventBoard"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>