<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/black_cream">

     <androidx.cardview.widget.CardView
         android:id="@+id/cvNoticeCard"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="26"
         app:cardCornerRadius="16dp"
         app:cardBackgroundColor="@color/tan"
         android:layout_marginBottom="5dp"
         android:layout_marginVertical="10dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="16dp"
             android:background="@drawable/hone_card_bg">

             <TextView
                 android:id="@+id/tvNoticeCardTitle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Notice Title"
                 android:textSize="20sp"
                 android:textColor="@color/white"
                 android:textStyle="bold"
                 android:layout_above="@id/tvNoticeCardDescription"/>

             <TextView
                 android:id="@+id/tvNoticeCardDescription"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Description"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:textSize="16sp"
                 android:textColor="@color/white"
                 android:layout_above="@id/tvNoticeCardSentAt"/>

             <TextView
                 android:id="@+id/tvNoticeCardSentAt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sent At"
                 android:textColor="@color/transp_white"
                 android:layout_alignParentBottom="true"/>

             <ImageView
                 android:id="@+id/ivNoticeList"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentEnd="true"
                 android:src="@drawable/icon_list"
                 app:tint="@color/white"/>

         </RelativeLayout>

     </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEventCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/mixed_tan_cream"
        android:layout_marginVertical="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/hone_card_bg"
            android:backgroundTint="@color/black">

            <TextView
                android:id="@+id/tvEventCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_above="@id/tvEventCardDescription"/>

            <TextView
                android:id="@+id/tvEventCardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_above="@id/tvEventCardSentAt"/>

            <TextView
                android:id="@+id/tvEventCardSentAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent At"
                android:textColor="@color/transp_white"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/ivEventList"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_list"
                app:tint="@color/white"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llMaintenanceAddFeedbackEmergency"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/llMaintenance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivMaintenance"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_apartment"
                android:layout_marginBottom="8dp"
                app:tint="@color/tan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintenance"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFeedbacks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivAddFeedback"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_feedback"
                android:layout_marginBottom="8dp"
                app:tint="@color/tan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedbacks"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llEmergency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivEmergency"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_emergency"
                android:layout_marginBottom="8dp"
                app:tint="@color/tan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLiveChatCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/mid_black_cream"
        android:layout_marginVertical="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/hone_card_bg">

            <TextView
                android:id="@+id/tvLiveChatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Chat"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvRecentChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Chat"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_above="@id/tvChatSentBy"/>

            <TextView
                android:id="@+id/tvChatSentBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent By"
                android:textColor="@color/transp_white"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/tvViewChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="View Chat"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:visibility="gone"
        android:text="Error"
        android:textColor="@color/white"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/homeProgressBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:visibility="gone"
        android:indeterminateTint="@color/tan"
        android:padding="150dp"/>





</LinearLayout>