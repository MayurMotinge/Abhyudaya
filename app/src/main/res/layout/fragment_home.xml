<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    android:layout_marginBottom="45dp">

    <!-- TODO: Update blank fragment layout -->

     <LinearLayout
         android:id="@+id/llHomeTop"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="24"
         android:layout_marginTop="10dp"
         android:weightSum="2">

         <androidx.cardview.widget.CardView
             android:id="@+id/cvMaintenanceCard"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="5dp"
             app:cardBackgroundColor="@color/black_cream"
             app:cardCornerRadius="15dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:padding="10dp"
                 android:gravity="bottom"
                 android:background="@drawable/hone_card_bg"
                 android:backgroundTint="@color/tan">

                 <TextView
                     android:id="@+id/tvMaintenanceTitle"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Maintenance"
                     android:textColor="@color/white"
                     android:textSize="16sp"
                     tools:ignore="HardcodedText" />

                 <TextView
                     android:id="@+id/tvMaintenanceAmount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Amount"
                     android:textSize="18sp"
                     android:textColor="@color/white"
                     />

                 <TextView
                     android:id="@+id/tvMaintenanceDueDate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Due Date"
                     android:textSize="14sp"
                     android:textColor="@color/transp_white"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/cvMaintenanceCardAdm"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="5dp"
             app:cardBackgroundColor="@color/black_cream"
             app:cardCornerRadius="15dp"
             android:visibility="gone">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:padding="10dp"
                 android:gravity="bottom"
                 android:background="@drawable/hone_card_bg"
                 android:backgroundTint="@color/tan">

                 <TextView
                     android:id="@+id/tvMaintenanceTitleAdm"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Maintenance"
                     android:textColor="@color/white"
                     android:textSize="16sp"
                     tools:ignore="HardcodedText" />

                 <TextView
                     android:id="@+id/tvNoOfMentePaid"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Paid"
                     android:textSize="18sp"
                     android:textColor="@color/white" />

                 <TextView
                     android:id="@+id/tvNoOfMentePending"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Pending"
                     android:textSize="18sp"
                     android:textColor="@color/white" />

                 <TextView
                     android:id="@+id/tvNoOfResidents"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="No. of Residents"
                     android:textSize="14sp"
                     android:textColor="@color/transp_white"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/cvFeedbackCard"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="10dp"
             app:cardBackgroundColor="@color/tan"
             app:cardCornerRadius="15dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:background="@drawable/hone_card_bg"
                 android:padding="10dp"
                 android:gravity="bottom">

                 <TextView
                     android:id="@+id/tvFeedbackTitle"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Feedback"
                     android:textColor="@color/white"
                     android:textSize="16sp"/>

                 <TextView
                     android:id="@+id/tvFeedbackFrom"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Feedback From"
                     android:textSize="18dp"
                     android:textColor="@color/white"/>

                 <TextView
                     android:id="@+id/tvFeedbackType"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Feedback Type"
                     android:textSize="14sp"
                     android:textColor="@color/transp_white"/>

             </LinearLayout>

         </androidx.cardview.widget.CardView>

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Recent Notice"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNoticeBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvTitleNotice"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/cream"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivNoticeCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_icon_logo_black_cream"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/hone_card_bg"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/ttNoticeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notice Title"
                        android:textSize="18sp"
                        android:layout_above="@id/ttNoticeDateTime"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/ttNoticeDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Date Time"
                        android:textSize="16sp"
                        android:textColor="@color/transp_white"/>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleEventBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Events"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEventBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/cream"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivEventCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_icon_logo_black_cream"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/hone_card_bg"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/ttEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Title"
                        android:textSize="18sp"
                        android:layout_above="@id/ttEventDateTime"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/ttEventDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Date Time"
                        android:textSize="16sp"
                        android:textColor="@color/transp_white"/>



                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>






</LinearLayout>