<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sent_chat"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="@color/black_cream"/>

        <TextView
            android:id="@+id/textMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello! How are you?"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tvSender"/>

        <TextView
            android:id="@+id/textTimestampSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:55 PM"
            android:textSize="9sp"
            android:textColor="@color/transp_black"
            android:layout_toEndOf="@id/textMessageSent"
            android:layout_alignBottom="@id/textMessageSent"
            android:paddingLeft="6dp" />
    </RelativeLayout>

</LinearLayout>